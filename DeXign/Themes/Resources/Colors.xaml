<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="AccentColor">#FFB800</Color>
    <Color x:Key="AccentColor_50">#4DFFB800</Color>

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentBrush_50" Color="{StaticResource AccentColor_50}"/>

    <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#717171" Offset="0"/>
        <GradientStop Color="#555555" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>