<c:ChromeWindow x:Class="DeXign.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeXign"
        xmlns:c="clr-namespace:DeXign.Controls"
        xmlns:shell="clr-namespace:Microsoft.Windows.Shell"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="DialogWindow" Height="306" Width="452">

    <Grid>
        <Button shell:WindowChrome.IsHitTestVisibleInChrome="True" Content="X" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="8" Command="{x:Static SystemCommands.CloseWindowCommand}"/>

        <Frame Content="{Binding Page}" Margin="16" NavigationUIVisibility="Hidden"/>
    </Grid>
</c:ChromeWindow>
