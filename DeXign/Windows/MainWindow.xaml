<c:ChromeWindow x:Class="DeXign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeXign"
        xmlns:c="clr-namespace:DeXign.Controls"
        mc:Ignorable="d"
        Style="{StaticResource DexignWindowStyle}"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="400"
        Width="1000" Height="700"
        Title="DX">
    
    <c:ChromeWindow.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="N" Command="{x:Static local:DXCommands.NewProjectCommand}"/>
        <KeyBinding Modifiers="Ctrl" Key="O" Command="{x:Static local:DXCommands.OpenProjectCommand}"/>
    </c:ChromeWindow.InputBindings>

    <c:ChromeWindow.Menu>
        <Menu>
            <c:MenuItemEx Header="파일(F)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="새로 만들기(N)" InputGestureText="Ctrl+N"
                          Command="{x:Static local:DXCommands.NewProjectCommand}"/>

                <c:MenuItemEx Header="열기(O)" InputGestureText="Ctrl+O"
                          Command="{x:Static local:DXCommands.OpenProjectCommand}"/>

                <Separator Style="{StaticResource DexignMenuSeparatorStyle}"/>

                <c:MenuItemEx Header="끝내기(X)" InputGestureText="Alt+F4" 
                          Command="{x:Static SystemCommands.CloseWindowCommand}"/>
            </c:MenuItemEx>
            <c:MenuItemEx Header="편집(E)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="1"/>
                <c:MenuItemEx Header="2"/>
                <c:MenuItemEx Header="3"/>
            </c:MenuItemEx>
            <c:MenuItemEx Header="빌드(B)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="1"/>
                <c:MenuItemEx Header="2"/>
                <c:MenuItemEx Header="3"/>
            </c:MenuItemEx>
        </Menu>
    </c:ChromeWindow.Menu>

    <Grid Background="#BBBBBB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <c:HeaderLayout Grid.Column="0" Background="#E0E0E0">
            <c:HeaderLayout.Header>
                <Label Content="HeaderLayout1 - Header" VerticalAlignment="Center"/>
            </c:HeaderLayout.Header>

            <Label Content="HeaderLayout1 - Content" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </c:HeaderLayout>

        <GridSplitter Grid.Column="1" Background="#C0C0C0" Width="2" HorizontalAlignment="Center"/>

        <TabControl Grid.Column="2">
            <c:ClosableTabItem Header="Test1">
                <Grid>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Stretch="Uniform" Data="{StaticResource AndroidPath}" Fill="DarkSalmon" Width="8" Height="8" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource iOSPath}" Fill="DarkSalmon" Width="8" Height="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource AndroidPath}" Fill="DarkSalmon" Width="16" Height="16" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource iOSPath}" Fill="DarkSalmon" Width="16" Height="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource AndroidPath}" Fill="DarkSalmon" Width="32" Height="32" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource iOSPath}" Fill="DarkSalmon" Width="32" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource AndroidPath}" Fill="DarkSalmon" Width="64" Height="64" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource iOSPath}" Fill="DarkSalmon" Width="64" Height="64"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource AndroidPath}" Fill="DarkSalmon" Width="128" Height="128" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource iOSPath}" Fill="DarkSalmon" Width="128" Height="128"/>
                        </StackPanel>

                        <TextBlock Text="Vector" HorizontalAlignment="Center" Foreground="Black" FontSize="32" Margin="0,64,0,0"/>
                    </StackPanel>
                </Grid>
            </c:ClosableTabItem>
            <c:ClosableTabItem Header="Test2">
                <Grid>
                </Grid>
            </c:ClosableTabItem>
        </TabControl>

        <GridSplitter Grid.Column="3" Background="#C0C0C0" Width="2" HorizontalAlignment="Center"/>

        <c:HeaderLayout Grid.Column="4" Background="#E0E0E0">
            <c:HeaderLayout.Header>
                <Label Content="HeaderLayout2 - Header" VerticalAlignment="Center"/>
            </c:HeaderLayout.Header>

            <Label Content="HeaderLayout2 - Content" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </c:HeaderLayout>
    </Grid>
</c:ChromeWindow>