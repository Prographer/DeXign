<c:ChromeWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeXign"
        xmlns:c="clr-namespace:DeXign.Controls"
        xmlns:dc="clr-namespace:DeXign.Editor.Controls"
        xmlns:l="clr-namespace:DeXign.Editor.Layer"
        xmlns:r="clr-namespace:DeXign.Editor.Renderer"
        xmlns:m="clr-namespace:DeXign.Models"
        xmlns:t="clr-namespace:DeXign.Theme"
        x:Class="DeXign.MainWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinWidth="600" MinHeight="400"
        Width="1280" Height="800"
        Title="DX">

    <c:ChromeWindow.Style>
        <StaticResource ResourceKey="DexignWindowStyle"/>
    </c:ChromeWindow.Style>

    <c:ChromeWindow.InputBindings>
        <KeyBinding Modifiers="Ctrl" Key="N" Command="{x:Static local:DXCommands.NewProjectCommand}"/>
        <KeyBinding Modifiers="Ctrl" Key="O" Command="{x:Static local:DXCommands.OpenProjectCommand}"/>
    </c:ChromeWindow.InputBindings>

    <c:ChromeWindow.Menu>
        <Menu>
            <c:MenuItemEx Header="파일(F)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="새로 만들기(N)" InputGestureText="Ctrl+N"
                          Command="{x:Static local:DXCommands.NewProjectCommand}"/>

                <c:MenuItemEx Header="열기(O)" InputGestureText="Ctrl+O"
                          Command="{x:Static local:DXCommands.OpenProjectCommand}"/>

                <Separator Style="{StaticResource DexignMenuSeparatorStyle}"/>

                <c:MenuItemEx Header="끝내기(X)" InputGestureText="Alt+F4" 
                          Command="{x:Static SystemCommands.CloseWindowCommand}"/>
            </c:MenuItemEx>
            <c:MenuItemEx Header="편집(E)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="1"/>
                <c:MenuItemEx Header="2"/>
                <c:MenuItemEx Header="3"/>
            </c:MenuItemEx>
            <c:MenuItemEx Header="빌드(B)" SnapsToDevicePixels="True" Foreground="White">
                <c:MenuItemEx Header="1"/>
                <c:MenuItemEx Header="2"/>
                <c:MenuItemEx Header="3"/>
            </c:MenuItemEx>
        </Menu>
    </c:ChromeWindow.Menu>

    <c:ChromeWindow.SubMenu>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <ComboBox Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" SelectedIndex="0" ItemTemplate="{DynamicResource ResolutionItemTemplate}" Style="{DynamicResource ResolutionComboBoxStyle}">
                <m:ResolutionItemModel Width="480" Height="800" Inch="4''" SubTitle="WVGA @ 120% 배율"/>
                <m:ResolutionItemModel Width="768" Height="1280" Inch="4.5''" SubTitle="WXGA @ 200% 배율"/>
                <m:ResolutionItemModel Width="720" Height="1280" Inch="4.7''" SubTitle="720p @ 180% 배율"/>
                <m:ResolutionItemModel Width="540" Height="960" Inch="5''" SubTitle="qHD  @ 120% 배율"/>
                <m:ResolutionItemModel Width="1080" Height="1920" Inch="5.5''" SubTitle="1080p @ 240% 배율"/>
                <m:ResolutionItemModel Width="720" Height="7280" Inch="6''" SubTitle="720p @ 140% 배율"/>
                <m:ResolutionItemModel Width="1080" Height="1920" Inch="6''" SubTitle="1080p @ 220% 배율"/>
            </ComboBox>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal" Margin="8,0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type RadioButton}" BasedOn="{StaticResource PathRadioButtonStyle}">
                        <Setter Property="Padding" Value="7"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Width" Value="32"/>
                        <Setter Property="Height" Value="32"/>
                    </Style>
                </StackPanel.Resources>
                
                <RadioButton Content="{StaticResource Path.Android}" IsChecked="True" Command="{x:Static local:DXCommands.PlatformCommand}" CommandParameter="Android"/>
                <RadioButton Content="{StaticResource Path.iOS}" Command="{x:Static local:DXCommands.PlatformCommand}" CommandParameter="iOS"/>
                <RadioButton Content="{StaticResource Path.Window}" Command="{x:Static local:DXCommands.PlatformCommand}" CommandParameter="Window"/>
            </StackPanel>
        </StackPanel>
    </c:ChromeWindow.SubMenu>

    <Grid Background="{StaticResource Brush.ContentBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition MinWidth="128"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>

        <c:HeaderLayout Grid.Column="0" Header="도구 상자" Style="{StaticResource DeXignHeaderLayoutStyle}">
            <DockPanel>
                <c:HintTextBox x:Name="toolBoxSearchBar" DockPanel.Dock="Top" Style="{DynamicResource SearchBarStyle}" TextHint="도구 검색"/>
                <c:ToolBox x:Name="toolBox" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           FilterKeyword="{Binding Text, ElementName=toolBoxSearchBar, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>
        </c:HeaderLayout>

        <GridSplitter Grid.Column="1" Background="#C0C0C0" Width="2" HorizontalAlignment="Center"/>

        <TabControl Grid.Column="2">
            <c:ClosableTabItem Header="Test1">
                <Grid Background="Gray">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Path Stretch="Uniform" Data="{StaticResource Path.Android}" Fill="DarkSalmon" Width="8" Height="8" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource Path.iOS}" Fill="DarkSalmon" Width="8" Height="8"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource Path.Android}" Fill="DarkSalmon" Width="16" Height="16" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource Path.iOS}" Fill="DarkSalmon" Width="16" Height="16"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource Path.Android}" Fill="DarkSalmon" Width="32" Height="32" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource Path.iOS}" Fill="DarkSalmon" Width="32" Height="32"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource Path.Android}" Fill="DarkSalmon" Width="64" Height="64" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource Path.iOS}" Fill="DarkSalmon" Width="64" Height="64"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,16,0,0">
                            <Path Stretch="Uniform" Data="{StaticResource Path.Android}" Fill="DarkSalmon" Width="128" Height="128" Margin="0,0,16,0"/>
                            <Path Stretch="Uniform" Data="{StaticResource Path.iOS}" Fill="DarkSalmon" Width="128" Height="128"/>
                        </StackPanel>

                        <TextBlock Text="Vector" HorizontalAlignment="Center" Foreground="Black" FontSize="32" Margin="0,64,0,0"/>
                    </StackPanel>
                </Grid>
            </c:ClosableTabItem>
            <c:ClosableTabItem Header="Test2">
                <Grid>
                    <ScrollViewer>
                        <AdornerDecorator>
                            <dc:Storyboard x:Name="storyboard" Background="Transparent">
                                <dc:Storyboard.RenderTransform>
                                    <ScaleTransform ScaleX="{Binding Value, ElementName=slider}" ScaleY="{Binding Value, ElementName=slider}"/>
                                </dc:Storyboard.RenderTransform>

                                <ContentControl Width="270" Height="480" l:AttachedAdorner.AdornerType="{x:Type r:ScreenRenderer}" Canvas.Left="170" Canvas.Top="80" Style="{DynamicResource {x:Static t:ThemeKeyStore.Screen}}">
                                    <Label Content="Hello DeXign Studio!" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                                </ContentControl>

                                <!--<UniformGrid Rows="4" Height="112" Width="186" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="DarkSlateBlue" Canvas.Left="38" Canvas.Top="37">
                                    <TextBlock Text="Stretch" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson"  Margin="10,0"/>
                                    <TextBlock Text="Center" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                    <TextBlock Text="Left" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" Margin="0,4" Width="49" />
                                    <TextBlock Text="Right" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                </UniformGrid>
                                <UniformGrid Columns="4" Height="112" Width="186" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="DarkSlateBlue" Canvas.Left="300" Canvas.Top="37">
                                    <TextBlock Text="Stretch" TextWrapping="Wrap" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                    <TextBlock Text="Center" TextWrapping="Wrap" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                    <TextBlock Text="Top" TextWrapping="Wrap" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                    <TextBlock Text="Bottom" TextWrapping="Wrap" TextAlignment="Center" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="Crimson" />
                                </UniformGrid>
                                <Grid Height="112" Width="186" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}" Background="DarkSlateBlue" Canvas.Left="38" Canvas.Top="208">
                                    <Rectangle Fill="Crimson" Width="20" HorizontalAlignment="Left" Margin="18,19,0,73" l:AttachedAdorner.AdornerType="{x:Type l:SelectionLayer}"/>
                                </Grid>-->
                            </dc:Storyboard>
                        </AdornerDecorator>
                    </ScrollViewer>
                    <Slider x:Name="slider" VerticalAlignment="Bottom" Margin="10" Maximum="8" Minimum="0.25" Value="1"/>
                </Grid>
            </c:ClosableTabItem>
        </TabControl>

        <GridSplitter Grid.Column="3" Background="#C0C0C0" Width="2" HorizontalAlignment="Center"/>

        <c:HeaderLayout Grid.Column="4" Header="속성" Style="{StaticResource DeXignHeaderLayoutStyle}">
            <c:PropertyGrid/>
        </c:HeaderLayout>
    </Grid>
</c:ChromeWindow>