<c:ChromeWindow x:Class="DeXign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeXign"
        xmlns:c="clr-namespace:DeXign.Controls"
        mc:Ignorable="d"
        Style="{StaticResource DexignWindowStyle}"
        WindowStartupLocation="CenterScreen"
        MinWidth="400" MinHeight="300"
        Width="1000" Height="700"
        Title="DX">
    <c:ChromeWindow.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{x:Static local:DXCommands.NewProjectCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{x:Static local:DXCommands.OpenProjectCommand}"/>
    </c:ChromeWindow.InputBindings>

    <c:ChromeWindow.MenuContent>
        <Menu>
            <MenuItem Header="파일(F)" SnapsToDevicePixels="True" Foreground="White">
                <MenuItem Header="새로 만들기(N)" InputGestureText="Ctrl+N"
                          Command="{x:Static local:DXCommands.NewProjectCommand}"/>

                <MenuItem Header="열기(O)" InputGestureText="Ctrl+O"
                          Command="{x:Static local:DXCommands.OpenProjectCommand}"/>

                <Separator Style="{StaticResource DexignMenuSeparatorStyle}"/>

                <MenuItem Header="끝내기(X)" InputGestureText="Alt+F4" 
                          Command="{x:Static SystemCommands.CloseWindowCommand}"/>
            </MenuItem>
            <MenuItem Header="편집(E)" SnapsToDevicePixels="True" Foreground="White">
                <MenuItem Header="1"/>
                <MenuItem Header="2"/>
                <MenuItem Header="3"/>
            </MenuItem>
            <MenuItem Header="빌드(B)" SnapsToDevicePixels="True" Foreground="White">
                <MenuItem Header="1"/>
                <MenuItem Header="2"/>
                <MenuItem Header="3"/>
            </MenuItem>
        </Menu>
    </c:ChromeWindow.MenuContent>

    <Grid Background="#BBBBBB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TabControl Grid.Column="1">
            <c:ClosableTabItem Header="Test1">
                <Grid/>
            </c:ClosableTabItem>
            <c:ClosableTabItem Header="Test2">
                <Grid>
                </Grid>
            </c:ClosableTabItem>
        </TabControl>
    </Grid>
</c:ChromeWindow>