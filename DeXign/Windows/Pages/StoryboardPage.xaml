<Page
    x:Class="DeXign.Windows.Pages.StoryboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dc="clr-namespace:DeXign.Editor.Controls"
    xmlns:local="clr-namespace:DeXign"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:DeXign.UI;assembly=DeXign.UI"
    Title="StoryboardPage"
    d:DesignHeight="665"
    d:DesignWidth="977"
    mc:Ignorable="d">

    <Page.InputBindings>
        <KeyBinding
            Key="F4"
            Command="{x:Static local:DXCommands.CloseCommand}"
            Modifiers="Alt" />
    </Page.InputBindings>

    <Grid>
        <AdornerDecorator ClipToBounds="True">
            <dc:StoryboardZoomPanel x:Name="zoomPanel">
                <dc:Storyboard x:Name="storyboard" />
            </dc:StoryboardZoomPanel>
        </AdornerDecorator>

        <ui:SpacingStackPanel
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Padding="10"
                Click="Button_Click"
                Content="DEBUG: ZoomFit" />
            <Button
                Padding="10"
                Click="Button_Click_1"
                Content="Binder Tree" />
        </ui:SpacingStackPanel>
    </Grid>
</Page>
