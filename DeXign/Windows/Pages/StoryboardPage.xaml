<Page x:Class="DeXign.Windows.Pages.StoryboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeXign"
      xmlns:dc="clr-namespace:DeXign.Editor.Controls"
      xmlns:c="clr-namespace:DeXign.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="665" d:DesignWidth="977"
      Title="StoryboardPage">

    <Page.InputBindings>
        <KeyBinding Modifiers="Alt" Key="F4" Command="{x:Static local:DXCommands.CloseCommand}"/>
    </Page.InputBindings>

    <Grid>
        <AdornerDecorator ClipToBounds="True">
            <dc:StoryboardZoomPanel x:Name="zoomPanel">
                <dc:Storyboard x:Name="storyboard" Width="1920" Height="1080"/>
            </dc:StoryboardZoomPanel>
        </AdornerDecorator>

        <c:SpacingStackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Orientation="Horizontal">
            <Button Content="DEBUG: ZoomFit" Click="Button_Click" Padding="10"/>
            <Button Content="Binder Tree" Padding="10" Click="Button_Click_1"/>
        </c:SpacingStackPanel>
    </Grid>
</Page>
